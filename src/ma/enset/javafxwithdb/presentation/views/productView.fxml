<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ma.enset.javafxwithdb.presentation.controllers.productController">
   <top>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <GridPane>
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label text="Nom" />
                  <Label text="Reference" GridPane.rowIndex="1" />
                  <Label text="Prix" GridPane.rowIndex="2" />
                  <Label text="Categorie" GridPane.rowIndex="3" />
                  <TextField fx:id="textNom" GridPane.columnIndex="1" />
                  <TextField fx:id="textRef" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <TextField fx:id="textPrix" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <ComboBox fx:id="comboCategory" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
               </children>
            </GridPane>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label text="Rechercher" />
                  <TextField fx:id="textSearch"/>
                  <Button mnemonicParsing="false" text="Add" onAction="#addProduct"/>
                  <Button mnemonicParsing="false" text="Edit" onAction="#updateProduct"/>
                  <Button mnemonicParsing="false" text="Delete" onAction="#deleteProduct"/>
               </children>
            </HBox>
         </children>
         <BorderPane.margin>
            <Insets bottom="10.0" />
         </BorderPane.margin>
      </VBox>
   </top>
   <center>
      <ListView fx:id="listViewProd" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER"  onMouseClicked="#loadOnClick"/>
   </center>
</BorderPane>
